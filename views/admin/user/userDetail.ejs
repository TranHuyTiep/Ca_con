<%include ../header.ejs%>


<%include ../left_menu.ejs%>

<!-- Right side -->
<div id="rightSide">

  <!-- Account panel top -->

  <div class="topNav">
    <div class="wrapper">
      <div class="welcome">
        <span>Xin chào: <b>admin!</b></span>
      </div>

      <div class="userNav">
        <ul>
          <li><a href="" target="_blank">
              <img style="margin-top:7px;" src="http://localhost:3000/images/admin/icons/light/home.png" />
              <span>Trang chủ</span>
            </a></li>

          <!-- Logout -->
          <li><a href="admin/home/logout.html">
              <img src="http://localhost:3000/images/admin/icons/topnav/logout.png" alt="" />
              <span>Đăng xuất</span>
            </a></li>

        </ul>
      </div>

      <div class="clear"></div>
    </div>
  </div>

  <!-- Main content -->

  <!-- Title area -->
  <div class="titleArea">
    <div class="wrapper">
      <div class="pageTitle">
        <h5>Bảng điều khiển</h5>
        <span>Trang quản lý user</span>
      </div>

      <div class="clear"></div>
    </div>
  </div>

  <div class="line"></div>

  <!-- Main content wrapper -->
  <div class="wrapper">

    <!-- Form -->
    <form class="form"  enctype="multipart/form-data">
      <fieldset>
        <div class="widget">
          <div class="title">
            <img src="http://localhost:3000/images/admin/icons/dark/add.png" class="titleIcon" />
            <h6>Thông tin</h6>
          </div>

          <ul class="tabs">
            <li><a href="#tab1">Thông tin về userỉ</a></li>
          </ul>

          <div class="tab_container">
            <div id='tab1' class="tab_content pd0">
              <div class="formRow">
                <label class="formLeft" for="param_name">FirstName:<span class="req">*</span></label>
                <div class="formRight">
                  <span class="oneTwo">
                    <%=user.firstName%>
                  </span>
                  <span name="name_autocheck" class="autocheck"></span>
                  <div name="name_error" class="clear error"></div>
                </div>
                <div class="clear"></div>
              </div>

              <div class="formRow">
                <label class="formLeft" for="param_name">LastName:<span class="req">*</span></label>
                <div class="formRight">
                  <span class="oneTwo">
                   <%=user.lastName%>
                  </span>
                  <span name="name_autocheck" class="autocheck"></span>
                  <div name="name_error" class="clear error"></div>
                </div>
                <div class="clear"></div>
              </div>

              <div class="formRow">
                <label class="formLeft" for="param_name">Email:<span class="req">*</span></label>
                <div class="formRight">
                  <span class="oneTwo">
                    <%=user.email%>
                  </span>
                  <span name="name_autocheck" class="autocheck"></span>
                  <div name="name_error" class="clear error"></div>
                </div>
                <div class="clear"></div>
              </div>

              <div class="formRow">
                <label class="formLeft" for="param_name">Phone:<span class="req">*</span></label>
                <div class="formRight">
                  <span class="oneTwo">
                    <%=user.phone%>
                  </span>
                  <span name="name_autocheck" class="autocheck"></span>
                  <div name="name_error" class="clear error"></div>
                </div>
                <div class="clear"></div>
              </div>


              <div class="formRow">
                <label class="formLeft" for="param_name">Company:<span class="req">*</span></label>
                <div class="formRight">
                  <span class="oneTwo">
                      <%=user.company%>
                  </span>
                  <span name="name_autocheck" class="autocheck"></span>
                  <div name="name_error" class="clear error"></div>
                </div>
                <div class="clear"></div>
              </div>

              <div class="formRow">
                <label class="formLeft" for="param_name">Country:<span class="req">*</span></label>
                <div class="formRight">
                  <span class="oneTwo cert" style=" width: 45em; word-wrap: break-word">
                    <%=user.country%>
                  </span>
                  <span name="name_autocheck" class="autocheck"></span>
                  <div name="name_error" class="clear error"></div>
                </div>
                <div class="clear"></div>
              </div>
                <%if(user.states){%>
              <div class="formRow">
                <label class="formLeft" for="param_name">States:<span class="req">*</span></label>
                <div class="formRight">
                  <span class="oneTwo">
                    <%=user.states%>
                  </span>
                  <span name="name_autocheck" class="autocheck"></span>
                  <div name="name_error" class="clear error"></div>
                </div>
                <div class="clear"></div>
              </div>
              <%}%>

                <%if(user.webAddress){%>
              <div class="formRow">
                <label class="formLeft" for="param_name">WebAddress:<span class="req">*</span></label>
                <div class="formRight">
                  <span class="oneTwo">
                    <%=user.webAddress%>
                  </span>
                  <span name="name_autocheck" class="autocheck"></span>
                  <div name="name_error" class="clear error"></div>
                </div>
                <div class="clear"></div>
              </div>
              <%}%>

              <%if(user.content){%>
              <div class="formRow">
                <label class="formLeft" for="param_name">Content:<span class="req">*</span></label>
                <div class="formRight">
                  <span class="oneTwo">
                    <%=user.content%>
                  </span>
                  <span name="name_autocheck" class="autocheck"></span>
                  <div name="name_error" class="clear error"></div>
                </div>
                <div class="clear"></div>
              </div>
              <%}%>

            </div>
          </div>

          <div class="formSubmit">
            <input type="button" value="Delete" class="redB deleteUser" />
          </div>
          <div class="clear"></div>
        </div>
      </fieldset>
    </form>
  </div>

  <script>
      $('.cert .exp').attr( "id",'current' );
      $('.cert .exp').addClass('active')
      $('.listCert').css("color"," #efefef");
      $( document ).ready(function() {
          $( ".deleteUser" ).click(function () {
              if (window.confirm("Bạn có muốn xóa user ?")) {
                  $.ajax({
                      url: '/admin/user/<%=user.Id_user%>',
                      type: 'DELETE',
                      dataType: 'json',
                  }).done(function(result) {
                      if(result){
                          window.location.replace("/admin/user");
                      }else {
                          alert('Quá chình xóa user gặp lỗi!')
                      }
                  });
              }

          })

      });
  </script>
<%include ../footer.ejs%>